<h1 class="display-4 text-primary">People#edit</h1>
<p><%= @msg %></p>
<%= form_for(@person, url:{controller:'people', action: 'update',id:@person.id}) do |form| %>
  <div class="form-group">
    <label for="name">Name</label>
    <%= form.text_field :name, class:"form-controll" %>
  </div>
  <div class="form-group">
    <label for="age">Age</label>
    <%= form.text_field :age, class:"form-controll" %>
  </div>
  <div class="form-group">
    <label for="mail">Mail</label>
    <%= form.text_field :mail, class:"form-controll" %>
  </div>
  <%= form.submit class:"btn btn-primary" %>
<% end %>
